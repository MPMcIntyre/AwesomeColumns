{
    "compilerOptions": {
        "lib": [
            "es2015",
            "DOM"
        ],
        "allowJs": true,
        // "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "ES6",
        "jsx": "react-jsx",
        "target": "es6",
        "moduleResolution": "node",
        "outDir": "./lib",
        "inlineSourceMap": true,
        "sourceMap": false,
        "declaration": false,
        "typeRoots": [
            "./node_modules/@types" // <-- This guy
        ],
    },
    "include": [
        "AwesomeColumns.tsx"
    ]
}